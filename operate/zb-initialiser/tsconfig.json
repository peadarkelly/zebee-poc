{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src", // needed to preserve dir structure
    "outDir": "./dist",
    "allowJs": false,
    "sourceMap": false,
    "declaration": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
